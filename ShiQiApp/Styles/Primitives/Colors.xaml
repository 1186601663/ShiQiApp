<!-- 
  基础颜色定义
  所有主题色集中管理
-->
<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!-- 主色调 -->
    <Color x:Key="PrimaryColor">#FF4A90E2</Color>
    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource PrimaryColor}" />

    <!-- 背景色 -->
    <Color x:Key="BackgroundMainColor">#FFF8F9FA</Color>
    <SolidColorBrush x:Key="BackgroundMainBrush" Color="{StaticResource BackgroundMainColor}" />

    <!-- 文字色 -->
    <Color x:Key="TextPrimaryColor">#FF212121</Color>
    <SolidColorBrush x:Key="TextPrimaryBrush" Color="{StaticResource TextPrimaryColor}" />
</ResourceDictionary>